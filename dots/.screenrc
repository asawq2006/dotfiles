autodetach      on
caption always  "%L=%-Lw%45>%{+b by}%n%f* %t%{-} %+Lw%-0<"
defscrollback   10000
defutf8         on
hardstatus      alwayslastline "%H                                                             (%C%a %M %d %Y)"
nethack         on
shell           zsh
startup_message off
vbell           on
vbell_msg       " *beep* "

# copy to mac clipboard on 'b':
bind b          eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"

screen -t zsh   0

