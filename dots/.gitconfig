[alias]
  br     = branch
  ci     = commit -v
  co     = checkout
  di     = diff
  diw    = diff --word-diff
  l      = log --graph --abbrev-commit --pretty=tight
  recent = log --graph @{1}.. --pretty=tight
  st     = status
  undo   = reset --soft HEAD^
  up     = pull --rebase
  wup    = log -p origin..@{0}

[branch]
  autosetuprebase = always
[core]
  quotepath    = false
  excludesfile = ~/.gitignore-global
[help]
  autocorrect = 1
[rerere]
  enabled = 1

[diff]
  tool = better-vimdiff
[difftool]
  prompt = false
[merge]
  tool          = better-vimdiff
[mergetool "better-vimdiff"]
  cmd           = better-vimdiff vim $BASE $LOCAL $REMOTE $MERGED
  trustExitCode = true
  keepBackup    = false
[mergetool "ediff"]
  cmd           = ediff $BASE $LOCAL
  keepBackup    = false

[color]
  branch    = auto
  diff      = auto
  status    = auto
  ui        = true
[color "branch"]
  current   = yellow reverse
  local     = yellow
  remote    = green
[color "diff"]
  meta      = cyan bold
  frag      = white
  old       = red
  new       = green
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[pretty]
  tight = %Cblue%h%Creset -%C(yellow)%d%Creset %s %Cgreen%cr %C(white)%an

